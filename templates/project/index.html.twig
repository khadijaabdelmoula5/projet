{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address_project</th>
                <th>Picture</th>
                <th>Description</th>
                <th>Project_status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.addressProject }}</td>
                <td>
                    {% if project.picture %}
                        <img src="{{ asset('uploads/' ~ project.picture) }}" alt="Project Picture" width="100">
                    {% else %}
                        No Picture
                    {% endif %}
                </td>
                <td>{{ project.description }}</td>
                <td>{{ project.projectStatus }}</td>
                <td>
                    <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-success">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_project_new') }}" class="btn btn-primary">Create new</a>

{% endblock %}
