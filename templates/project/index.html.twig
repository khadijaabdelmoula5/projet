{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .custom-img {
            max-width: 100px;
            height: auto;
        }
    </style>
{% endblock %}

{% block body %}
 <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="">Arch App</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user">User</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/client">Client</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/project">Project</a>
                    </li>
                    {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt"></i> 
                        </a>
                    </li>
                {% endif %}
                </ul>
            </div>
        </div>
    </nav>
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address_project</th>
                <th>Picture</th>
                <th>Description</th>
                <th>Project_status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.addressProject }}</td>
                 <td>
                    {% if project.picture %}
                        <img src="{{ asset('uploads/' ~ project.picture) }}" alt="Project Picture" class="custom-img">
                    {% else %}
                        No Picture Available
                    {% endif %}
                </td>
                <td>{{ project.description }}</td>
                <td>{{ project.projectStatus }}</td>
                <td>
                    <a href="{{ path('app_project_show', {'id': project.id}) }}" class="btn btn-primary">Show</a>
                    <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-success">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_project_new') }}" class="btn btn-primary">Create new</a>

{% endblock %}
