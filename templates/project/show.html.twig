{% extends 'base.html.twig' %}
{% block title %}Project{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .custom-img {
            max-width: 100%;
            height: auto;
        }
    </style>
{% endblock %}
{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
            <a class="navbar-brand" href="/">Arch App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user">User</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/client">Client</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/project">Project</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt"></i> 
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
    <div class="container">

    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Address_project</th>
                <td>{{ project.addressProject }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Picture</th>
                <td>
                    {% if project.picture %}
                        <img src="{{ asset('uploads/' ~ project.picture) }}" alt="Project Picture" class="custom-img">
                    {% else %}
                        No Picture Available
                    {% endif %}
                </td>
                

            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Project_status</th>
                <td>{{ project.projectStatus }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Client</th>
                <td>{{ project.client.name }}  </td>
                <td></td>
            </tr>
             <tr>
                <th><a href="{{ path('app_project_index') }}" class="btn btn-primary btn-block">Back to List</a></th>
                <td> <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-success btn-block">Edit</a></td>
                <td>{{ include('project/_delete_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>
    </div>

{% endblock %}
