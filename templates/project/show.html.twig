{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <h1>Project</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Address_project</th>
                <td>{{ project.addressProject }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Picture</th>
                <td>
                    {% if project.picture %}
                        <img src="{{ asset('uploads/' ~ project.picture) }}" alt="Project Picture" class="custom-img">
                    {% else %}
                        No Picture Available
                    {% endif %}
                </td>
                                <td></td>

            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Project_status</th>
                <td>{{ project.projectStatus }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Client</th>
                <td>{{ project.client.name }}  </td>
                <td></td>
            </tr>
             <tr>
                <th><a href="{{ path('app_project_index') }}" class="btn btn-primary btn-block">Back to List</a></th>
                <td> <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="btn btn-success btn-block">Edit</a></td>
                <td>{{ include('project/_delete_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
