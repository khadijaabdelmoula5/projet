{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
            <a class="navbar-brand" href="/">Arch App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/user">User</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/client">Client</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/project">Project</a>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">
                            <i class="fas fa-sign-out-alt"></i> 
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
<div class="container">
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Address</th>
                <td>{{ client.address }}</td>
                                <td></td>

            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ client.phoneNumber }}</td>
                                <td></td>
            </tr>
            <tr>
                <th>Cin</th>
                <td>{{ client.cin }}</td>
                <td></td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ client.user.login }}  </td>
                <td></td>
            </tr>
             <tr>
                <th><a href="{{ path('app_client_index') }}" class="btn btn-primary btn-block">Back to List</a></th>
                <td> <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-success btn-block">Edit</a></td>
                <td>{{ include('client/_delete_form.html.twig') }}</td>
            </tr>
        </tbody>
    </table>
</div>

     
{% endblock %}
